# MATRIX CBS - Apache Configuration

# MIME Types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType application/json .json
    AddType text/css .css
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType image/webp .webp
    AddType image/svg+xml .svg
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# ============================================
# SEO REDIRECTS & PROXY CONFIGURATION
# ============================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # -----------------------------------------
    # 1. Force HTTPS (http → https)
    # -----------------------------------------
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

    # -----------------------------------------
    # 2. Remove www (www.matrixcbs.com → matrixcbs.com)
    # -----------------------------------------
    RewriteCond %{HTTP_HOST} ^www\.matrixcbs\.com$ [NC]
    RewriteRule ^(.*)$ https://matrixcbs.com/$1 [R=301,L]

    # -----------------------------------------
    # 3. Legacy URL redirects (old static HTML → new Next.js routes)
    # -----------------------------------------
    # Training pages → megoldasaink
    RewriteRule ^trening\.html$ /megoldasaink/ [R=301,L]
    RewriteRule ^trening/?$ /megoldasaink/ [R=301,L]

    # Services page → megoldasaink
    RewriteRule ^szolgaltatasok\.html$ /megoldasaink/ [R=301,L]

    # Index.html → homepage
    RewriteRule ^index\.html$ / [R=301,L]

    # About page
    RewriteRule ^rolunk\.html$ /rolunk/ [R=301,L]

    # Contact page
    RewriteRule ^contact\.html$ /kapcsolat/ [R=301,L]

    # -----------------------------------------
    # 4. Serve existing files/directories directly
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # -----------------------------------------
    # 5. Proxy everything else to Next.js
    # -----------------------------------------
    RewriteRule ^(.*)$ http://127.0.0.1:3001/$1 [P,L]
</IfModule>

<IfModule mod_proxy.c>
    ProxyPreserveHost On
</IfModule>
