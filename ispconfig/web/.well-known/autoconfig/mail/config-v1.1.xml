<clientConfig version="1.1">
  <emailProvider id="matrixcbs.com">
    <domain>matrixcbs.com</domain>
    <displayName>MATRIXCBS - Mail</displayName>
    <displayShortName>MATRIX_CBS</displayShortName>

    <!-- IMAP 143 / STARTTLS -->
    <incomingServer type="imap">
      <hostname>mail.matrixcbs.com</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILADDRESS%</username>
    </incomingServer>

    <!-- SMTP 587 / STARTTLS -->
    <outgoingServer type="smtp">
      <hostname>mail.matrixcbs.com</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILADDRESS%</username>
    </outgoingServer>
  </emailProvider>
</clientConfig>
